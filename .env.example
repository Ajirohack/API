# Space API Environment Variables
# Copy this file to .env and fill in the values

# API Settings
API_VERSION=1.0.0
DEBUG=False
ENVIRONMENT=development  # development, testing, production

# Security
JWT_SECRET_KEY=your_secure_random_secret_key_here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
CORS_ORIGINS=["http://localhost:3000","https://your-production-domain.com"]

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/space_db
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# Redis Cache (optional)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Plugin Settings
PLUGIN_DIR=plugins
PLUGIN_SCAN_ON_STARTUP=True
